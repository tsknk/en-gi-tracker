  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "jimp": "^0.22.10"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
